@model List<Slider>
@{
    int count = 0;
}
<div class="container">
    <h1>Slider</h1>
    <table class="table">
        <thead>

            <a class="btn btn-primary " asp-action="Create">Create</a>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>
                        <div style="width:100px">
                            <img width=100% src="~/Upload/SliderImages/@item.ImgUrl" alt="Alternate Text" />
                        </div>
                    </td>
                    <td>@item.Descriptin</td>
                    <td><a class="btn btn-secondary" asp-action="Update" asp-route-id=@item.Id>Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>